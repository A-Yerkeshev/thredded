<%= form_for [messageboard, topic, post], html: { class: 'thredded--post-form', 'data-thredded-post-form' => true } do |form| %>
  <ul>
    <%= render 'thredded/posts/content_field', form: form %>

    <li>
      <%= form.submit button_text, class: 'thredded--post-form--submit' %>
    </li>
  </ul>
<% end %>
