<nav class="thredded--user-navigation" role="navigation">
  <div class="thredded--user-navigation--search">
    <%= render 'thredded/search/form', messageboard: messageboard_or_nil %>
  </div>

  <% if signed_in? %>
    <ul class="thredded--user-navigation--actions">
      <% if Thredded.standalone_layout? %>
        <li><%= link_to thredded_current_user, user_path(thredded_current_user) %></li>
      <% end %>

      <%= render 'thredded/shared/notification_preferences', messageboard: messageboard_or_nil %>

      <% if Thredded.standalone_layout? %>
        <%= render 'thredded/shared/standalone_nav' %>
      <% end %>
    </ul>
  <% elsif Thredded.standalone_layout? %>
    <ul class="thredded--user-navigation--actions">
      <%= render 'thredded/shared/standalone_nav' %>
    </ul>
  <% end %>
</nav>
